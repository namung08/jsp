<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
 PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="Board">
	<select id="getBoardList" parameterType="hashmap" resultType="boarddto">
		SELECT b.* FROM
		(SELECT rownum rn, a.* FROM
		(SELECT * FROM TBL_BOARD ORDER BY BOARDNUM desc) a) b
		WHERE b.rn BETWEEN #{startRow} AND #{endRow}
	</select>
	<select id="getBoardCnt" resultType="_int">
		SELECT count(*) FROM
		TBL_BOARD
	</select>
	<insert id="insertBoard" parameterType="boarddto">
		INSERT INTO tbl_board VALUES
		(board_seq.nextval, #{boardtitle}, #{boardcontents}, #{username}, sysdate, 0	)
	</insert>
	<select id="getDetail" parameterType="_int" resultType="boarddto">
		SELECT * FROM TBL_BOARD WHERE BOARDNUM = #{boardnum}
	</select>
	<update id="boardreadCountPlus" parameterType="_int">
		UPDATE TBL_BOARD SET boardreadcount = boardreadcount + 1 WHERE BOARDNUM = #{boardnum}
	</update>
</mapper>
 
 
 
 
 
 
 
 
 
 
 
 